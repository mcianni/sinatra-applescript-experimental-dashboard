.container
  %h1.volume
    #{@volume}

  #volume-controls
    %a{ :href => '#', :id => 'increase-volume', :class => 'btn btn-primary btn-large' }
      %i{ :class => 'icon-volume-up' }
    %a{ :href => '#', :id => 'decrease-volume', :class => 'btn btn-primary btn-large' }
      %i{ :class => 'icon-volume-down' }
    <br/>
    %a{ :href => '#', :id => 'mute-volume',     :class => 'btn btn-primary btn-large' }
      %i{ :class => 'icon-volume-off' }

  #controls
    %a{ :href => '#', :id => 'sleep',           :class => 'btn btn-danger btn-large' }
      %i{ :class => 'icon-off' }
